---
import Layout from '../layouts/Layout.astro';
import { ArrowLeftIcon, FaceFrownIcon } from '@heroicons/react/24/outline';

const title = 'Pagina non trovata - 404';
const description = 'Ops! La pagina che stai cercando non esiste.';
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-civic-stone flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
      <!-- Card con tema civico -->
      <div class="bg-white border-3 border-civic-border card-shadow p-8 sm:p-12 relative">
        <!-- Decorative corner -->
        <div class="absolute top-0 left-0 w-12 h-12 border-l-3 border-t-3 border-civic-terra opacity-20"></div>

        <!-- Icona e numero 404 -->
        <div class="mb-8 relative z-10">
          <FaceFrownIcon className="mx-auto h-20 w-20 text-civic-terra mb-6" />
          <h1 class="text-9xl font-bold text-civic-neutral mb-4">404</h1>
        </div>

        <!-- Testo spiritoso -->
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-civic-charcoal mb-4 font-serif">
            Ops! Questa pagina si √® persa
          </h2>
          <p class="text-lg text-civic-neutral mb-4">
            Sembra che questa pagina abbia deciso di fare una pausa dalle raccolte firme! üèÉ‚Äç‚ôÇÔ∏è
