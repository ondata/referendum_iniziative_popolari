---
import Layout from '../layouts/Layout.astro';
import HomePage from '../components/HomePage';
import HamburgerMenuNative from '../components/HamburgerMenuNative.astro';
import Footer from '../components/Footer.astro';
import { fetchInitiatives } from '../lib/initiatives';
import { homeContent } from '../config/content';

// Carica i dati delle iniziative
const initiatives = await fetchInitiatives();
---

<Layout title={homeContent.title}>
  <div class="min-h-screen">
    <!-- Brutalist Header -->
    <header class="relative bg-civic-charcoal border-b-3 border-civic-border overflow-hidden">
      <!-- Geometric background element -->
      <div class="absolute top-0 right-0 w-96 h-96 opacity-10">
        <div class="absolute top-8 right-8 w-32 h-32 border-8 border-civic-terra transform rotate-12"></div>
        <div class="absolute top-24 right-32 w-24 h-24 bg-civic-terra transform -rotate-6"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 relative z-10">
        <!-- Navigation -->
        <div class="flex justify-end items-center mb-8">
          <HamburgerMenuNative baseUrl={import.meta.env.BASE_URL} />
        </div>

        <!-- Title Section - Editorial Style -->
        <div class="max-w-4xl">
          <div class="mb-3">
            <span class="inline-block px-3 py-1 bg-civic-terra text-white text-xs font-bold uppercase tracking-wider civic-badge">
              Democrazia Diretta
            </span>
          </div>
          <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-4 animate-slide-up">
            {homeContent.title}
          </h1>
          <p class="text-lg sm:text-xl text-civic-stone max-w-2xl leading-relaxed animate-slide-up-delayed">
            {homeContent.subtitle}
          </p>
        </div>
      </div>

      <!-- Strong bottom accent -->
      <div class="h-1 bg-gradient-to-r from-civic-terra via-civic-terra-dark to-civic-border"></div>
    </header>

    <!-- HomePage content -->
    <HomePage initiatives={initiatives} baseUrl={import.meta.env.BASE_URL} hideHeader={true} client:load />

    <!-- Footer -->
    <Footer />
  </div>
</Layout>
